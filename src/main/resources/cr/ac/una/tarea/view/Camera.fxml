<?import javafx.scene.layout.StackPane?>

<AnchorPane id="AnchorPane" prefHeight="610.0" prefWidth="961.0" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.tarea.controller.CameraController">
   <children>
      <StackPane layoutX="17.0" layoutY="14.0" prefHeight="496.0" prefWidth="924.0" stylesheets="@Styles.css">
         <children>
            <ImageView fx:id="previewImageView" fitHeight="450.0" fitWidth="903.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </StackPane>
      <HBox alignment="CENTER" layoutX="241.0" layoutY="510.0" prefHeight="100.0" prefWidth="480.0" stylesheets="@Styles.css">
         <children>
            <MFXButton fx:id="SetCameraState" onAction="#handleCloseCamera" prefHeight="58.0" prefWidth="140.0" text="Encender Camara">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </MFXButton>
            <MFXButton fx:id="TakePic" onAction="#onHandleTakePic" prefHeight="58.0" prefWidth="140.0" text="Tomar Foto">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </MFXButton>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </HBox>
   </children>
</AnchorPane>
